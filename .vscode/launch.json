  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch via PNPM",
      "type": "node",
      "request": "launch",
      "console": "integratedTerminal",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["run", "start:debug"]
    },
    {
      "name": "Launch Unit Tests via PNPM",
      "type": "node",
      "request": "launch",
      "console": "integratedTerminal",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["run", "test"]
    },
    {
      "name": "Launch Integration Tests via PNPM",
      "type": "node",
      "request": "launch",
      "console": "integratedTerminal",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["run", "test:int"]
    },
    {
      "name": "Launch All Tests via PNPM",
      "type": "node",
      "request": "launch",
      "console": "integratedTerminal",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["run", "test:all"]
    }
  ]
}
